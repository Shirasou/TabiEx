<div class="container ly_main">
  <%= render 'layouts/errors', obj: @trip_way %>
</div>
<div class="container">
  <div class="row justify-content-md-center">
    <h2 class="text-center">Edit Trip Way</h2>
  </div>
</div>
<%= render 'form', trip: @trip_way %>


<script>
  $('#evaluation_stars').raty({
    size: 36,
    starOff: "<%= asset_path('star-off.png') %>",
    starOn: "<%= asset_path('star-on.png') %>",
    starHalf: "<%= asset_path('star-half.png') %>",
    scoreName: 'trip_way[evaluation]',
    half: true,
    score: <%= @trip_way.evaluation %>
  });
</script>