<% if user.image.attached? %>
  <%= image_tag user.image, class: "rounded-circle", style: "width: 120px; object-fit: cover;"  %>
<% else %>
  <%= image_tag 'no-img.jpg', class: "rounded-circle", style: "width: 120px; object-fit: cover;" %>
<% end %>
<h4 class="mt-2">
  <%= user.name %>
</h4>
<div>
  <span>
    <%= user.sex %>
  </span>
  <span>
    <%= user.age.to_s %>歳
  </span>
</div>
<div>
  <span>
    follows:<%= link_to user.followings.count, user_followings_path(user) %>
    followers:<%= link_to user.followers.count, user_followers_path(user) %>
  </span>
</div>
<div class="mt-3 p-3">
  <span><%= user.introduction %></span>
</div>

<div>
  <% if current_user != user %>
    <% if current_user.following?(user) %>
      <%= link_to "フォロー外す", user_relationships_path(user.id), method: :delete, class: "btn btn-sm btn-outline-danger" %>
    <% else %>
      <%= link_to "フォロー", user_relationships_path(user.id), method: :post, class: "btn btn-sm btn-outline-success" %>
    <% end %>
  <% else %>
    <%= link_to 'edit', edit_user_path(user), class: "btn btn-sm btn-outline-success" %>
  <% end %>
</div>

<div class="mt-2">
  <% unless user.id == current_user.id %>
    <% if isRoom == true %>
      <%= link_to "チャットへ", room_path(roomId), class: "btn btn-sm btn-outline-primary" %>
    <% else %>
      <%= form_with model: room, local: true do |f| %>
        <%= fields_for entry do |e| %>
          <%= e.hidden_field :user_id, value: user.id %>
        <% end %>
        <%= f.submit "チャットを始める", class: "btn btn-sm btn-outline-primary" %>
      <% end %>
    <% end %>
  <% end %>
</div>