<div class="card user-card" style="width: 18rem;">
  <% if user.image.attached? %>
    <%= image_tag user.image, class: "bd-placeholder-img card-img-top", style: "width: 100%; height: 150px; object-fit: cover;" %>
  <% else %>
    <%= image_tag 'no-img.jpg', class: "bd-placeholder-img card-img-top", style: "width: 100%; height: 150px; object-fit: cover;" %>
  <% end %>
  <div class="card-body">
    <h5 class="card-title"><%= user.name %></h5>
    <p class="card-text"><small class="text-muted"><%= user.introduction %></small></p>
    <% if current_user != user %>
      <% if current_user.following?(user) %>
        <%= link_to "フォロー外す", user_relationships_path(user.id), method: :delete, class: " btn btn-sm btn-outline-danger" %>
      <% else %>
        <%= link_to "フォローする", user_relationships_path(user.id), method: :post, class: " btn btn-sm btn-outline-primary" %>
      <% end %>
    <% end %>
  </div>
</div