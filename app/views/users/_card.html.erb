<div class="user_card card col-md-3 user-card">
  <div class="card-content">
    <div class="card-body user_card-body  p-0">
      <div class="profile">
        <% if user.image.attached? %>
          <%= image_tag user.image  %>
        <% else %>
          <%= image_tag 'no-img.jpg' %>
        <% end %>
      </div>
        <div class="card-title">
          <%= user.name %></br>
          <small>
            follows:<%= link_to user.followings.count, user_followings_path(user) %>
            followers:<%= link_to user.followers.count, user_followers_path(user) %>
          </small>
        </div>
        <div class="card-subtitle">
          <p><small class="text-muted"><%= user.introduction %></small></p>
        </div>
        <div class="text-right">
          <% if current_user != user %>
            <% if current_user.following?(user) %>
              <%= link_to "フォロー外す", user_relationships_path(user.id), method: :delete, class: " btn btn-sm btn-outline-primary" %>
            <% else %>
              <%= link_to "フォローする", user_relationships_path(user.id), method: :post %>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>