<h2>User info</h2>
<%= form_with model: @user do |f| %>
  <div class="field">
    <h5>Image</h5>
    <%= f.file_field :image, autofocus: true %>
  </div>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :sex %><br />
    <%= f.select :sex, User.sexes.keys, {prompt: "選択してください"}, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :birth_at %><br />
    <%= f.date_field :birth_at, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :introduction %><br />
    <%= f.text_area :introduction, class: "introduction" %>
  </div>

  <div class="actions">
    <%= f.submit "変更" %>
    <%= link_to "退会", unsubscribe_users_path %>
  </div>
<% end %>