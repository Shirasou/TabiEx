<% users.each do |user| %>
  <div class="col-md-4 mb-3">
    <div class="border border-dark rounded border-3 text-center">
          <div>
              <div class="mt-4">
                <% if user.image.attached? %>
                  <%= image_tag user.image, class: "rounded-circle border border-dark border-3", style: "width: 200px; height: 200px; object-fit: cover;"  %>
                <% else %>
                  <%= image_tag 'no-img.jpg', class: "rounded-circle border border-dark border-3", style: "width: 200px; height: 200px; object-fit: cover;" %>
                <% end %>
              </div>
          </div>
          <div class="user-name">
            <%= user.name %>
          </div>
          <div class="pt-2 pl-3">
            <p>
            <%= user.introduction %>
            </p>
          </div>
          <div class="pb-2 pl-2 small">
            <%= user.sex %>/<%= user.age.to_s %>歳
          </div>
          <div class="pb-2 text-center">
            <% if current_user != user %>
              <% if current_user.following?(user) %>
                <%= link_to "フォロー外す", user_relationships_path(user.id), method: :delete, class: "btn btn-sm btn-outline-danger" %>
              <% else %>
                <%= link_to "フォロー", user_relationships_path(user.id), method: :post, class: "btn btn-sm btn-outline-success" %>
              <% end %>
            <% end %>
            <%= link_to 'Show', user_path(user), class: "btn btn-sm btn-outline-primary" %>
          </div>
    </div>
  </div>
<% end %>

