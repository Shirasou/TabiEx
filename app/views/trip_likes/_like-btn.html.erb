<% if trip.trip_liked_by?(current_user) %>
  <%= link_to trip.trip_likes.count, trip_trip_likes_path(trip), method: :delete, remote: true, class: "fas fa-heart heart_red" %>
<% else %>
  <%= link_to trip.trip_likes.count, trip_trip_likes_path(trip), method: :post, remote: true, class: "fas fa-heart heart_blue" %>
<% end %>